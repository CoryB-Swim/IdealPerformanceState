    <footer class="bg-[#003B71] text-white mt-16">
        <div class="container mx-auto p-8 text-center">
            <p>This interactive tool is based on established principles of sports psychology.</p>
            <p class="text-sm text-gray-400 mt-2">Use these techniques consistently in training to build robust mental skills for competition.</p>
        </div>
    </footer>

<script>
document.addEventListener('DOMContentLoaded', () => {

    const wrapLabel = (label, maxLength = 16) => {
        if (typeof label !== 'string' || label.length <= maxLength) {
            return label;
        }
        const words = label.split(' ');
        const lines = [];
        let currentLine = '';
        words.forEach(word => {
            if ((currentLine + ' ' + word).trim().length > maxLength) {
                lines.push(currentLine.trim());
                currentLine = word;
            } else {
                currentLine = (currentLine + ' ' + word).trim();
            }
        });
        if (currentLine) {
            lines.push(currentLine.trim());
        }
        return lines;
    };

    const tooltipTitleCallback = (tooltipItems) => {
        const item = tooltipItems[0];
        let label = item.chart.data.labels[item.dataIndex];
        if (Array.isArray(label)) {
            return label.join(' ');
        }
        return label;
    };
    
    const commonChartOptions = {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                labels: {
                    color: '#003B71',
                    font: {
                        family: "'Inter', sans-serif"
                    }
                }
            },
            tooltip: {
                callbacks: {
                    title: tooltipTitleCallback
                },
                titleFont: {
                    family: "'Inter', sans-serif"
                },
                bodyFont: {
                    family: "'Inter', sans-serif"
                },
                backgroundColor: '#003B71',
            }
        },
        scales: {
            y: {
                ticks: { color: '#0073BC' },
                grid: { color: 'rgba(0, 115, 188, 0.1)' }
            },
            x: {
                ticks: { color: '#0073BC' },
                grid: { color: 'rgba(0, 115, 188, 0.1)' }
            }
        }
    };


    const ctxInvertedU = document.getElementById('invertedUCurve')?.getContext('2d');
    if (ctxInvertedU) {
        new Chart(ctxInvertedU, {
            type: 'line',
            data: {
                labels: ['Low', 'Slightly Low', 'Optimal', 'Slightly High', 'High'],
                datasets: [{
                    label: 'Performance Level',
                    data: [30, 70, 100, 75, 40],
                    borderColor: '#00A1E4',
                    backgroundColor: 'rgba(0, 161, 228, 0.2)',
                    fill: true,
                    tension: 0.4,
                    pointRadius: 5,
                    pointBackgroundColor: '#00A1E4'
                }]
            },
            options: {
                ...commonChartOptions,
                 scales: {
                    y: { 
                        beginAtZero: true, 
                        max: 110,
                        ticks: {
                            callback: function(value) {
                                if (value === 100) return 'Peak';
                                if (value === 0) return 'Low';
                                return null;
                            },
                            color: '#0073BC'
                        },
                        grid: { color: 'rgba(0, 115, 188, 0.1)' }
                    },
                    x: { 
                        title: { display: true, text: 'Arousal / Readiness Level', color: '#003B71' },
                        ticks: { color: '#0073BC' },
                        grid: { color: 'rgba(0, 115, 188, 0.1)' }
                    }
                }
            }
        });
    }


    const ctxIpsCharacteristics = document.getElementById('ipsCharacteristicsChart')?.getContext('2d');
    if (ctxIpsCharacteristics) {
        new Chart(ctxIpsCharacteristics, {
            type: 'radar',
            data: {
                labels: ['Mentally Focused', 'Self-Confident', 'Physically Relaxed', 'Energized', 'In Control', 'Enjoying the Battle'],
                datasets: [{
                    label: 'Ideal Performance State',
                    data: [95, 90, 85, 90, 88, 92],
                    borderColor: '#0073BC',
                    backgroundColor: 'rgba(0, 115, 188, 0.2)',
                    pointBackgroundColor: '#0073BC'
                }]
            },
            options: {
                ...commonChartOptions,
                scales: {
                    r: {
                        angleLines: { color: 'rgba(0, 115, 188, 0.2)' },
                        grid: { color: 'rgba(0, 115, 188, 0.2)' },
                        pointLabels: {
                            font: { size: 12, family: "'Inter', sans-serif" },
                            color: '#003B71'
                        },
                        ticks: {
                            color: 'white',
                            backdropColor: 'rgba(0, 59, 113, 0.8)',
                            stepSize: 25
                        },
                        min: 0,
                        max: 100
                    }
                }
            }
        });
    }

    const ctxGoalTypes = document.getElementById('goalTypesChart')?.getContext('2d');
    if (ctxGoalTypes) {
        const rawLabels = ['Process Goals (e.g., technique)', 'Performance Goals (e.g., personal best)', 'Outcome Goals (e.g., winning)'];
        new Chart(ctxGoalTypes, {
            type: 'bar',
            data: {
                labels: rawLabels.map(l => wrapLabel(l, 25)),
                datasets: [{
                    label: "Athlete's Level of Control",
                    data: [95, 75, 25],
                    backgroundColor: ['#00A1E4', '#85CDE6', '#CCCCCC'],
                    borderColor: '#003B71',
                    borderWidth: 1
                }]
            },
            options: {
                ...commonChartOptions,
                indexAxis: 'y',
                scales: {
                    x: {
                        beginAtZero: true,
                        max: 100,
                        title: { display: true, text: 'Level of Control (%)', color: '#003B71' },
                        ticks: { color: '#0073BC' },
                        grid: { color: 'rgba(0, 115, 188, 0.1)' }
                    },
                    y: {
                        ticks: { color: '#0073BC' },
                        grid: { display: false }
                    }
                }
            }
        });
    }

    const breathingText = document.getElementById('breathing-text');
    if(breathingText) {
        const phases = ['Inhale for 4s', 'Hold for 4s', 'Exhale for 4s', 'Hold for 4s'];
        let currentPhase = 0;
        setInterval(() => {
            currentPhase = (currentPhase + 1) % phases.length;
            breathingText.textContent = phases[currentPhase];
        }, 4000);
    }
});
</script>

</body>
</html>
